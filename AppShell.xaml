<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SoccerLinkPlayerSideApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SoccerLinkPlayerSideApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <Shell.Resources>
        <Style x:Key="BaseStyle" TargetType="Element">
            <Setter Property="Shell.BackgroundColor" Value="#2A5670" />
            <Setter Property="Shell.ForegroundColor" Value="White" />
            <Setter Property="Shell.TitleColor" Value="White" />
        </Style>
    </Shell.Resources>

    <ShellContent Title="Logowanie" ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
    <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate views:DashboardPage}" Route="DashboardPage" />

</Shell>