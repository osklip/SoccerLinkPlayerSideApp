                                        BackgroundColor="{Binding YesColor}" 
                                        TextColor="{Binding YesTextColor}"
                                        BorderColor="{Binding YesBorderColor}"
                                        BorderWidth="1"
                                        CornerRadius="8"
                                        FontAttributes="Bold"
                                        HeightRequest="40"/>

                                <Button Grid.Column="1" 
                                        Text="Nie bÄ™dÄ™" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AttendanceViewModel}}, Path=SetAbsenceCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{Binding NoColor}" 
                                        TextColor="{Binding NoTextColor}"
                                        BorderColor="{Binding NoBorderColor}"
                                        BorderWidth="1"
                                        CornerRadius="8"
                                        FontAttributes="Bold"
                                        HeightRequest="40"/>
                            </Grid>

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.RowSpan="2" 
                           IsRunning="{Binding IsBusy}" 
                           IsVisible="{Binding IsBusy}" 
                           Color="{StaticResource HighlightBorderColor}"
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"/>
    </Grid>
</ContentPage>