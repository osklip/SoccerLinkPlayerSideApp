            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AttendanceItem">
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15" Padding="15">
                        <VerticalStackLayout Spacing="12">

                            <Grid ColumnDefinitions="*, Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="{Binding Title}" 
                                           FontAttributes="Bold" 
                                           FontSize="16" 
                                           TextColor="{StaticResource PrimaryTextColor}"/>

                                    <Label Text="{Binding Location}" 
                                           FontSize="12" 
                                           TextColor="{StaticResource MutedTextColor}"/>
                                </VerticalStackLayout>

                                <Label Grid.Column="1" 
                                       Text="{Binding DateDisplay}" 
                                       TextColor="{StaticResource AccentTextColor}" 
                                       FontAttributes="Bold" 
                                       FontSize="14"
                                       VerticalOptions="Start"/>
                            </Grid>

                            <BoxView HeightRequest="1" Color="{StaticResource CardBorderColor}" Opacity="0.5"/>

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Button Grid.Column="0" 
                                        Text="BÄ™dÄ™" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AttendanceViewModel}}, Path=SetPresenceCommand}"
