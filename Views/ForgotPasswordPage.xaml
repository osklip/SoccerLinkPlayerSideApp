<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SoccerLinkPlayerSideApp.ViewModels"
             x:Class="SoccerLinkPlayerSideApp.Views.ForgotPasswordPage"
             Title="Reset Hasła"
             Shell.NavBarIsVisible="True">

    <Grid>
        <Border BackgroundColor="{StaticResource LoginCardColor}"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 20"
                WidthRequest="320"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Padding="30">

            <VerticalStackLayout Spacing="20">
                <Label Text="Przypomnij hasło" 
                       TextColor="{StaticResource LoginDarkTextColor}"
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" />

                <Label Text="Wpisz swój adres email, aby otrzymać link resetujący." 
                       TextColor="{StaticResource LoginDarkTextColor}"
                       FontSize="12"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Adres email" TextColor="{StaticResource LoginDarkTextColor}" FontAttributes="Bold" FontSize="12"/>
                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource InputBackgroundColor}" Padding="0">
                        <Entry Text="{Binding Email}" Placeholder="email@przyklad.com" Margin="5,0" Keyboard="Email"/>
                    </Border>
                </VerticalStackLayout>

                <Button Text="Wyślij link" 
                        Command="{Binding SendResetLinkCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,10,0,0"/>

                <ActivityIndicator IsRunning="{Binding IsBusy}" Color="{StaticResource LoginDarkTextColor}" />

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>