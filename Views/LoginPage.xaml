<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SoccerLinkPlayerSideApp.ViewModels"
             x:Class="SoccerLinkPlayerSideApp.Views.LoginPage"
             Title="Logowanie"
             Shell.NavBarIsVisible="False">

    <Grid>
        <Border BackgroundColor="{StaticResource LoginCardColor}"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 20"
                WidthRequest="320"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Padding="30">

            <VerticalStackLayout Spacing="20">
                <Label Text="Logowanie" 
                       TextColor="{StaticResource LoginDarkTextColor}"
                       FontSize="28" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" />

                <VerticalStackLayout Spacing="5">
                    <Label Text="Adres email" TextColor="{StaticResource LoginDarkTextColor}" FontAttributes="Bold" FontSize="12"/>
                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource InputBackgroundColor}" Padding="0">
                        <Entry Text="{Binding Email}" Placeholder="email@przyklad.com" Margin="5,0"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Hasło" TextColor="{StaticResource LoginDarkTextColor}" FontAttributes="Bold" FontSize="12"/>
                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource InputBackgroundColor}" Padding="0">
                        <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Hasło" Margin="5,0"/>
                    </Border>
                </VerticalStackLayout>

                <Button Text="Zaloguj się" 
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,10,0,0"/>

                <Label Text="Nie pamiętam hasła"
                       TextColor="{StaticResource LoginDarkTextColor}"
                       FontSize="13"
                       TextDecorations="Underline"
                       HorizontalOptions="Center"
                       Margin="0,5,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToForgotPasswordCommand}"/>
                    </Label.GestureRecognizers>
                </Label>

                <ActivityIndicator IsRunning="{Binding IsBusy}" Color="{StaticResource LoginDarkTextColor}" />

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>