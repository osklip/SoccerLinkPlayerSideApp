<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SoccerLinkPlayerSideApp.ViewModels"
             xmlns:models="clr-namespace:SoccerLinkPlayerSideApp.Models"
             x:Class="SoccerLinkPlayerSideApp.Views.MessagesPage"
             Title="Wiadomości">

    <Grid>
        <Grid RowDefinitions="Auto, Auto, *">

            <Grid Grid.Row="0" ColumnDefinitions="*,*" Padding="10" ColumnSpacing="10">
                <Button Grid.Column="0" Text="Odebrane" 
                        Command="{Binding SwitchTabCommand}" CommandParameter="Received"
                        BackgroundColor="{Binding IsReceivedTab, Converter={StaticResource BoolToColorConverter}}"
                        TextColor="{StaticResource LoginDarkTextColor}" FontAttributes="Bold" CornerRadius="10"/>

                <Button Grid.Column="1" Text="Wysłane" 
                        Command="{Binding SwitchTabCommand}" CommandParameter="Sent"
                        BackgroundColor="{Binding IsSentTab, Converter={StaticResource BoolToColorConverter}}"
                        TextColor="{StaticResource LoginDarkTextColor}" FontAttributes="Bold" CornerRadius="10"/>
            </Grid>

            <ActivityIndicator Grid.Row="1" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="{StaticResource HighlightBorderColor}" Margin="10"/>

            <CollectionView Grid.Row="2" ItemsSource="{Binding Messages}" Margin="10">
                <CollectionView.EmptyView>
                    <Label Text="Brak wiadomości" TextColor="{StaticResource MutedTextColor}" HorizontalOptions="Center" VerticalOptions="Center"/>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Wiadomosc">
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto">
                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding Temat}" FontAttributes="Bold" TextColor="{StaticResource AccentTextColor}" FontSize="16"/>
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding DataWyslania, StringFormat='{0:dd.MM HH:mm}'}" TextColor="{StaticResource MutedTextColor}" FontSize="12"/>
                                <Label Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding Tresc}" TextColor="{StaticResource PrimaryTextColor}" LineBreakMode="TailTruncation" MaxLines="3" Margin="0,5,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <Button Text="+" 
                Command="{Binding OpenComposeCommand}"
                BackgroundColor="{StaticResource HighlightBorderColor}" TextColor="{StaticResource LoginDarkTextColor}" 
                FontSize="30" WidthRequest="60" HeightRequest="60" CornerRadius="30"
                HorizontalOptions="End" VerticalOptions="End" Margin="20"
                Shadow="{Shadow Brush=Black, Offset='2,2', Opacity=0.5}"/>

        <Grid BackgroundColor="#CC000000" IsVisible="{Binding IsComposeVisible}" Padding="20">
            <Border BackgroundColor="{StaticResource CardBackgroundColor}" Stroke="{StaticResource HighlightBorderColor}" StrokeThickness="2" VerticalOptions="Center" StrokeShape="RoundRectangle 20" Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Do Trenera" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource PrimaryTextColor}" HorizontalOptions="Center"/>

                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource InputBackgroundColor}" Padding="0">
                        <Entry Placeholder="Temat" Text="{Binding NewSubject}" Margin="5,0"/>
                    </Border>

                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource InputBackgroundColor}" Padding="0">
                        <Editor Placeholder="Treść..." Text="{Binding NewBody}" HeightRequest="150" AutoSize="TextChanges" Margin="5,0"/>
                    </Border>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <Button Grid.Column="0" Text="Anuluj" Command="{Binding CloseComposeCommand}" BackgroundColor="{StaticResource MutedTextColor}" TextColor="White"/>
                        <Button Grid.Column="1" Text="Wyślij" Command="{Binding SendMessageCommand}" BackgroundColor="{StaticResource HighlightBorderColor}" TextColor="{StaticResource LoginDarkTextColor}" FontAttributes="Bold"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>