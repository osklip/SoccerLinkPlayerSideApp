<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SoccerLinkPlayerSideApp.ViewModels"
             xmlns:models="clr-namespace:SoccerLinkPlayerSideApp.Models"
             x:Class="SoccerLinkPlayerSideApp.Views.CalendarPage"
             Title="{Binding Title}"
             BackgroundColor="#F0F2F5">

    <Grid RowDefinitions="Auto, *">
        <ActivityIndicator Grid.Row="0" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#2A5670" Margin="10"/>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Events}" Margin="15">
            <CollectionView.EmptyView>
                <Label Text="Brak wydarzeÅ„ w terminarzu." HorizontalOptions="Center" VerticalOptions="Center" TextColor="Gray"/>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:CalendarItem">
                    <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="0" Margin="0,0,0,15" StrokeThickness="0">
                        <Grid ColumnDefinitions="10, *, Auto">
                            <BoxView Grid.Column="0" Color="{Binding Color}" VerticalOptions="Fill"/>

                            <VerticalStackLayout Grid.Column="1" Padding="10,15,10,15" Spacing="5">
                                <Label Text="{Binding Title}" FontAttributes="Bold" TextColor="#2A5670" FontSize="16"/>
                                <Label Text="{Binding Description}" TextColor="Gray" FontSize="14"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" Padding="15" VerticalOptions="Center" HorizontalOptions="Center">
                                <Label Text="{Binding Icon}" FontSize="24" HorizontalOptions="Center"/>
                                <Label Text="{Binding Date, StringFormat='{0:dd.MM}'}" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
                                <Label Text="{Binding Date, StringFormat='{0:HH:mm}'}" TextColor="Gray" FontSize="12" HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>