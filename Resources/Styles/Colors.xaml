<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="AppBackgroundColor">#405861</Color>
    <Color x:Key="CardBackgroundColor">#32404A</Color>
    <Color x:Key="CardBorderColor">#5A707A</Color>
    <Color x:Key="HighlightBorderColor">#9ECBFF</Color>

    <Color x:Key="PrimaryTextColor">#E6F6FF</Color>
    <Color x:Key="SecondaryTextColor">#CDE6F8</Color>
    <Color x:Key="AccentTextColor">#FFD700</Color>
    <Color x:Key="MutedTextColor">#86A9C8</Color>

    <Color x:Key="LoginCardColor">#98C9FF</Color>
    <Color x:Key="LoginDarkTextColor">#2A5670</Color>
    <Color x:Key="InputBackgroundColor">#BFBFBF</Color>
    <Color x:Key="InputPlaceholderColor">#404040</Color>
    <Color x:Key="InputTextColor">#000000</Color>

    <Color x:Key="PositiveColor">#2ECC71</Color>
    <Color x:Key="NegativeColor">#E74C3C</Color>
    <Color x:Key="WarningColor">#F1C40F</Color>

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>

</ResourceDictionary>